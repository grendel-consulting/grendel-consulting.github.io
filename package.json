{
  "name": "grendel-consulting.github.io",
  "description": "Documentation handbook entry point for Grendel Consulting",
  "author": {
    "name": "James Ramirez"
  },
  "version": "0.2.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "preinstall": "only-allow pnpm",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{js,mjs,json,ts,tsx,md,mdx,yml,astro,feature}\"",
    "browsers": "turbo run browsers",
    "e2e": "turbo run e2e"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead"
    ],
    "development": [
      "last 2 Chrome versions",
      "last 1 Firefox versions",
      "last 1 Safari versions"
    ]
  },
  "devDependencies": {
    "only-allow": "1.2.1",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-gherkin": "3.1.3",
    "turbo": "2.6.1",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ],
    "overrides": {
      "sharp@<0.32.6": ">=0.32.6"
    }
  }
}
